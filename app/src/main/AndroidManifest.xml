<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chattingapp">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_chatting_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChattingApp">
        <activity android:name=".activity_message"></activity>
        <activity android:name=".activity_start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sign up_Activity -->
        <activity android:name=".activity_sign_up" /> <!-- sign in -->
        <activity
            android:name=".activity_sign_in"
            android:screenOrientation="portrait"></activity> <!-- Main_Activity -->
        <activity android:name=".MainActivity" />
    </application>

</manifest>